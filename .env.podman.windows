# =================================================
# Configuration Podman/Windows - Plateforme d'Imprimerie
# Renommez ce fichier en .env après configuration
# =================================================

# Mode d'environnement
NODE_ENV=production

# ===============================
# BASE DE DONNÉES POSTGRESQL
# ===============================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=imprimerie_db
DB_USER=imprimerie_user
DB_PASSWORD=imprimerie_production_password_ultra_secure_2024

# ===============================
# AUTHENTIFICATION JWT
# ===============================
JWT_SECRET=imprimerie_jwt_production_secret_ultra_secure_key_2024_never_share_this
JWT_EXPIRES_IN=24h

# ===============================
# CONFIGURATION SERVEUR
# ===============================
PORT=5001

# URLs pour Windows (localhost par défaut)
FRONTEND_URL=http://localhost:3001
BACKEND_URL=http://localhost:5001

# URLs React (build-time)
REACT_APP_API_URL=http://localhost:5001/api
REACT_APP_SOCKET_URL=http://localhost:5001

# ===============================
# REDIS (CACHE)
# ===============================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=imprimerie_redis_password_2024

# ===============================
# CONFIGURATION UPLOAD/PERFORMANCES
# ===============================
UPLOAD_MAX_SIZE=100mb
REQUEST_TIMEOUT=300s
MAX_CONNECTIONS=100

# ===============================
# SÉCURITÉ
# ===============================
CORS_ORIGIN=http://localhost:3001
SESSION_SECRET=imprimerie_session_secret_windows_2024

# ===============================
# PATHS WINDOWS (ajustez si nécessaire)
# ===============================
# Répertoires de données (relatifs au docker-compose)
DATA_POSTGRES_PATH=./data/postgres
DATA_UPLOADS_PATH=./data/uploads
DATA_LOGS_PATH=./data/logs
DATA_BACKUPS_PATH=./data/backups
DATA_REDIS_PATH=./data/redis

# ===============================
# OPENAI (si utilisé)
# ===============================
# OPENAI_API_KEY=votre_clé_openai_ici

# ===============================
# EMAIL (si configuré)
# ===============================
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=votre_email@gmail.com
# EMAIL_PASS=votre_mot_de_passe_app

# ===============================
# CONFIGURATION AVANCÉE PODMAN
# ===============================
# Limite mémoire par container (ajustez selon votre système)
BACKEND_MEMORY_LIMIT=512m
FRONTEND_MEMORY_LIMIT=256m
POSTGRES_MEMORY_LIMIT=1g
REDIS_MEMORY_LIMIT=128m

# Configuration réseau
PODMAN_NETWORK_SUBNET=172.20.0.0/16

# ===============================
# DEBUG & LOGS
# ===============================
LOG_LEVEL=info
DEBUG_MODE=false

# ===============================
# CONFIGURATION SPÉCIFIQUE WINDOWS
# ===============================
# Timezone pour Windows
TZ=Europe/Paris

# Encoding pour éviter les problèmes de caractères
LANG=C.UTF-8
LC_ALL=C.UTF-8