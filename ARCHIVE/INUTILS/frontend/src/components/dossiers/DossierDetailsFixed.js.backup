        userMessage =
          err?.response?.data?.message ||
          err?.response?.data?.error ||
          err?.message ||
          'Erreur lors du chargement des d√©tails';
      }
      setError(userMessage || 'Erreur lors du chargement des d√©tails');
    } finally {
      setLoading(false);
    }
