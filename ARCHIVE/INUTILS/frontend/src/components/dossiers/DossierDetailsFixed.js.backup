const DossierDetails = ({ dossierId, dossier: dossierProp = null, isOpen, onClose, onStatusChange }) => {
  const { user } = useAuth();
  const [showDebugger, setShowDebugger] = useState(false);
  
  // Debug du r√¥le utilisateur
