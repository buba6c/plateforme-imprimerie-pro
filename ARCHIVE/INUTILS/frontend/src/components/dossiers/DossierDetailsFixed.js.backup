          window.__LAST_DOSSIER_FETCH__ = {
            at: new Date().toISOString(),
            dossierId,
            status,
            code,
            data: err?.response?.data,
          };
        }
      } catch (_) {
        /* ignorer toute erreur de logging */
      }
      let userMessage;
      if (status === 401) {
        userMessage = 'Session expir√©e - Veuillez vous reconnecter';
      } else if (status === 404) {
        userMessage =
          code === 'DOSSIER_NOT_FOUND'
            ? "Ce dossier n'existe pas ou a √©t√© supprim√©."
            : 'Dossier introuvable.';
      } else if (status === 403) {
        userMessage =
          code === 'ACCESS_DENIED'
            ? `Acc√®s refus√© : ${err?.response?.data?.message?.replace('Acc√®s refus√© : ', '')}`
